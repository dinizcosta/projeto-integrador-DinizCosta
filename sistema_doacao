# Desenvolvedor: Diniz dos Santos Costa

estoque = []  # Lista que armazena as doa√ß√µes

def cadastrar_doacao():
    print("\n--- Novo Cadastro ---")
    item = input("Nome do alimento/item: ")
    qtd = input("Quantidade (ex: 10kg, 5 unidades): ")
    validade = int(input("Dias para o vencimento: "))
    
    # Adiciona os dados como um dicion√°rio na lista
    doacao = {"item": item, "quantidade": qtd, "validade": validade}
    estoque.append(doacao)
    print(f"‚úÖ '{item}' adicionado ao estoque.")

def listar_estoque():
    print("\n--- Itens Cadastrados ---")
    if not estoque:
        print("O estoque est√° vazio.")
    else:
        for i in estoque:
            status = "‚ö†Ô∏è URGENTE" if i['validade'] <= 5 else "‚úÖ OK"
            print(f"[{status}] {i['item']} - Qtd: {i['quantidade']} - Vence em: {i['validade']} dias")

def ver_alertas():
    print("\n--- Relat√≥rio de Validade (At√© 5 dias) ---")
    alertas = [item for item in estoque if item['validade'] <= 5]
    
    if not alertas:
        print("Nenhum item com validade cr√≠tica no momento.")
    else:
        for i in alertas:
            print(f"üö© PRIORIDADE: {i['item']} (Vencimento em {i['validade']} dias!)")

def menu():
    while True:
        print("\n===== GEST√ÉO DE DOA√á√ïES SOCIAL =====")
        print("1. Cadastrar Doa√ß√£o")
        print("2. Listar Todos os Itens")
        print("3. Ver Alertas de Validade")
        print("4. Sair")
        opcao = input("Escolha uma op√ß√£o: ")
        
        if opcao == '1': cadastrar_doacao()
        elif opcao == '2': listar_estoque()
        elif opcao == '3': ver_alertas()
        elif opcao == '4': 
            print("Encerrando o sistema social. At√© logo!")
            break
        else: print("Op√ß√£o inv√°lida.")

if __name__ == "__main__":
    menu()
